    <script>
        // Create animated floating social media icons in the hero background
        document.addEventListener('DOMContentLoaded', function() {
            const iconsContainer = document.getElementById('floating-icons-container');
            const icons = [
                'fab fa-facebook', 'fab fa-twitter', 'fab fa-instagram', 
                'fab fa-linkedin', 'fab fa-tiktok', 'fab fa-youtube', 
                'fab fa-snapchat', 'fab fa-telegram', 'fab fa-reddit', 
                'fab fa-pinterest'
            ];
            const colors = [
                '#4267B2', '#1DA1F2', '#E1306C', '#0A66C2', '#000000',
                '#FF0000', '#FFFC00', '#2AABEE', '#FF4500', '#E60023'
            ];
            
            // Create 25 floating icons
            for (let i = 0; i < 25; i++) {
                const icon = document.createElement('i');
                const randomIcon = Math.floor(Math.random() * icons.length);
                icon.className = `${icons[randomIcon]} floating-icon`;
                icon.style.color = colors[randomIcon];
                icon.style.left = `${Math.random() * 100}%`;
                icon.style.top = `${Math.random() * 100}%`;
                icon.style.animationDuration = `${15 + Math.random() * 20}s`;
                icon.style.animationDelay = `-${Math.random() * 20}s`;
                iconsContainer.appendChild(icon);
            }
            
            // Handle YouTube download form submission
            const downloadForm = document.getElementById('youtube-download-form');
            if (downloadForm) {
                downloadForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const urlInput = this.querySelector('input[type="url"]');
                    const youtubeUrl = urlInput.value.trim();
                    
                    // Basic validation for YouTube URL
                    if (!youtubeUrl) {
                        alert('Please enter a YouTube URL');
                        return;
                    }
                    
                    // Check if it's a valid YouTube URL (basic check)
                    if (!youtubeUrl.includes('youtube.com') && !youtubeUrl.includes('youtu.be')) {
                        alert('Please enter a valid YouTube URL');
                        return;
                    }
                    
                    // Placeholder for actual download functionality
                    // In a real implementation, this would connect to a backend service
                    alert('Download functionality would be implemented here. URL: ' + youtubeUrl);
                    
                    // Clear the input field after "submission"
                    urlInput.value = '';
                });
            }
            
            // Handle Share button click
            const shareButton = document.querySelector('.share-button');
            if (shareButton) {
                shareButton.addEventListener('click', function() {
                    // Placeholder for share functionality
                    if (navigator.share) {
                        // Use Web Share API if available
                        navigator.share({
                            title: 'AllGrab - Free YouTube Video Downloader',
                            text: 'Download YouTube videos for free with AllGrab!',
                            url: window.location.href
                        })
                        .catch(err => console.log('Error sharing:', err));
                    } else {
                        // Fallback: copy URL to clipboard
                        navigator.clipboard.writeText(window.location.href)
                            .then(() => alert('Link copied to clipboard! Share it with your friends.'))
                            .catch(err => console.log('Error copying to clipboard:', err));
                    }
                });
            }
        });
    </script>
